{
  "name": "dsl-ai-playground",
  "description": "Intelligent DSL learning platform with enhanced Chat â†’ Parser integration, AI-powered assistance and real-time code execution",
  "private": true,
  "version": "3.4.0",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\" --names \"server,client\" --prefix-colors \"blue,green\"",
    "dev:client": "vite",
    "dev:server": "cd apps/server && pnpm run dev",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:server": "cd apps/server && pnpm run build",
    "start:server": "cd apps/server && pnpm run start",
    "lint": "eslint .",
    "lint:server": "cd apps/server && pnpm run lint",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@gorules/zen-engine": "^0.44.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tanstack/react-query": "^5.56.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@uiw/react-json-view": "2.0.0-alpha.32",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.26.2",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@google/generative-ai": "^0.24.1",
    "@jest/globals": "30.0.0-beta.3",
    "@tailwindcss/typography": "^0.5.15",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "express": "^5.1.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.47",
    "supertest": "^7.1.1",
    "tailwindcss": "^3.4.11",
    "ts-jest": "^29.3.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ]
  }
